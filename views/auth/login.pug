extends ../layout/common.pug

block content
	h1 Login
	if errors
		each error in errors
			.alert.alert-danger= error
	form(method = "POST", action = "/auth/login")
		label(for = "name") Name
		input(type = "text", placeholder = "User Login", name = "name", id = "name", autocomplete = "off", value=values ? values.name : "")
		input(type = "submit", value = "Login")
