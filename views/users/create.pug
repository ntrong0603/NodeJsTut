extends ../layout/common.pug

block content
	h1 Create User
	if errors
		each error in errors
			.alert.alert-danger= error
	a(href="/users") View users
	form(method = "POST", action = "/users/create", enctype = "multipart/form-data")
		.form-group
			label(for = "name") Name
			input.form-control(type = "text", placeholder = "Ho ten", name = "name", id = "name", autocomplete = "off", value=values ? values.name : "")
		.form-group
			label(for = "upload") File
			input.form-control-file#upload(name = "file", type = "file")
		input(type = "submit", value = "Dang ky")
